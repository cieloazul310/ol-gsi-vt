{
  "name": "ol-vt-styles",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "^17.0.7",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^12.1.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1"
  },
  "scripts": {
    "build": "lerna run build",
    "dev": "lerna run dev --parallel",
    "bootstrap": "lerna bootstrap",
    "serve": "open packages/app/dist/index.html",
    "deploy": "npx gh-pages -d packages/app/dist",
    "publish": "lerna publish",
    "publish:beta": "lerna publish --canary --preid beta",
    "publish:minor": "lerna publish --canary minor",
    "lint": "lerna run lint",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "prettier": "prettier --parser typescript --write \"packages/**/{src,test}/**/*.{js,ts}\""
  },
  "lint-staged": {
    "./packages/*/src/**/*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
