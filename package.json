{
  "name": "ol-vt-styles",
  "packageManager": "yarn@3.2.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "app/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.7",
    "eslint": "^8.48.0",
    "eslint-config-custom": "workspace:*",
    "husky": "^8.0.1",
    "jest": "^29.6.4",
    "lerna": "^7.2.0",
    "lint-staged": "^14.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "tsconfig": "workspace:*"
  },
  "scripts": {
    "build": "lerna run build",
    "build:app": "yarn workspace react-app run build",
    "build:package": "npm-run-all build:utils build:vt-style build:vt",
    "dev": "lerna run dev --parallel",
    "dev:app": "yarn workspace react-app run dev",
    "dev:package": "npm-run-all --parallel dev:utils dev:vt-style dev:vt",
    "serve": "npx http-server app/react-app/build/ -o",
    "deploy": "npx gh-pages -d app/gallery/out/ -t",
    "version": "lerna version --conventional-commits",
    "version:major": "lerna version major --conventional-commits",
    "version:minor": "lerna version minor --conventional-commits",
    "version:patch": "lerna version patch --conventional-commits",
    "publish": "lerna publish from-git",
    "release:major": "npm-run-all version:major publish",
    "release:minor": "npm-run-all version:minor publish",
    "release:patch": "npm-run-all version:patch publish",
    "ci:versionup:patch": "lerna version patch --no-push --no-git-tag-version --yes && yarn run update-lockfile && yarn run commit-version",
    "ci:versionup:minor": "lerna version minor --no-push --no-git-tag-version --yes && yarn run update-lockfile && yarn run commit-version",
    "ci:versionup:major": "lerna version major --no-push --no-git-tag-version --yes && yarn run update-lockfile && yarn run commit-version",
    "ci:release": "lerna publish from-package --yes",
    "update-lockfile": "yarn install --mode=update-lockfile",
    "commit-version": "git add . && git commit -m \"chore(release): v$(node -p 'require(\"./lerna.json\").version')\"",
    "lint": "lerna run lint",
    "prettier": "prettier --parser typescript --write \"{app,packages}/**/{src,test}/**/*.{js,ts}\"",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "test": "jest",
    "build:vt": "yarn workspace @cieloazul310/ol-gsi-vt run build",
    "build:vt-style": "yarn workspace @cieloazul310/ol-gsi-vt-style run build",
    "build:utils": "yarn workspace @cieloazul310/ol-gsi-vt-style-utils run build",
    "dev:vt": "yarn workspace @cieloazul310/ol-gsi-vt run dev",
    "dev:vt-style": "yarn workspace @cieloazul310/ol-gsi-vt-style run dev",
    "dev:utils": "yarn workspace @cieloazul310/ol-gsi-vt-style-utils run dev"
  },
  "lint-staged": {
    "./packages/*/src/**/*.{js,ts}": [
      "eslint --fix",
      "prettier --parser typescript --write"
    ],
    "./app/*/src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --parser typescript --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}