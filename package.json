{
  "name": "ol-vt-styles",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "^17.0.7",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^12.1.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1"
  },
  "scripts": {
    "build": "lerna run build",
    "dev": "lerna run dev --parallel",
    "bootstrap": "lerna bootstrap",
    "serve": "npx http-server packages/app/dist/ -o",
    "deploy": "npx gh-pages -d packages/app/dist",
    "version": "lerna version --conventional-commits",
    "version:major": "lerna version major --conventional-commits",
    "version:minor": "lerna version minor --conventional-commits",
    "version:patch": "lerna version patch --conventional-commits",
    "publish": "lerna publish --from-git",
    "release:major": "npm-run-all version:major publish",
    "release:minor": "npm-run-all version:minor publish",
    "release:patch": "npm-run-all version:patch publish",
    "lint": "lerna run lint",
    "prettier": "prettier --parser typescript --write \"packages/**/{src,test}/**/*.{js,ts}\"",
    "lint-staged": "lint-staged",
    "prepare": "husky install"
  },
  "lint-staged": {
    "./packages/*/src/**/*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
